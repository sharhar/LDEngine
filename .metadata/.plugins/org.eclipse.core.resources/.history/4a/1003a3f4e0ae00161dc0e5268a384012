package game;

import java.util.ArrayList;

public class Universe {
	public static final float G = 10;
	
	public static ArrayList<Body> bodies = new ArrayList<Body>();
	
	public static void tick(float time) {
		for(Body b:bodies) {
			b.tick(time);
		}
	}
	
	public static void render() {
		for(Body b:bodies) {
			b.draw();
		}
	}
}
