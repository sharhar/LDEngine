package game;

import java.awt.Graphics;

import engine.utils.math.Vector2f;

public class GameController {
	
	public static void init() {
		Universe.bodies.add(new Body(new Vector2f(500, 600), new Vector2f(10, 0), 10, 10, true));
		Universe.bodies.add(new Body(new Vector2f(100, 100), new Vector2f(0, -10), 10, 1, true));
		Universe.bodies.add(new Body(new Vector2f(500, 600), new Vector2f(10, 0), 10, 10, true));
		Universe.bodies.add(new Body(new Vector2f(100, 100), new Vector2f(0, -10), 10, 1, true));
		Universe.bodies.add(new Body(new Vector2f(500, 600), new Vector2f(10, 0), 10, 10, true));
		Universe.bodies.add(new Body(new Vector2f(100, 100), new Vector2f(0, -10), 10, 1, true));
		
		
		Universe.bodies.add(new Body(new Vector2f(200, 500), new Vector2f(), 10, 1000, false));
		Universe.bodies.add(new Body(new Vector2f(500, 200), new Vector2f(), 10, 1000, false));
		Universe.bodies.add(new Body(new Vector2f(200, 200), new Vector2f(), 10, 1000, false));
		Universe.bodies.add(new Body(new Vector2f(500, 500), new Vector2f(), 10, 1000, false));
	}
	
	public static void render() {
		Universe.tick(Game.deltaTime * 10);
		Universe.render();
	}
	
	public static void postRender(Graphics g) {
		
	}
}
