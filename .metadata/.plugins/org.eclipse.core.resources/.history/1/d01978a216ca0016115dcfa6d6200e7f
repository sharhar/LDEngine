package game.entities;

import java.awt.event.KeyEvent;

import engine.input.Keyboard;
import engine.utils.math.Vector2f;
import game.Game;

public class PlayerHero extends Hero{
	
	float G = -100;
	float yVel = 0;

	public PlayerHero(Vector2f pos) {
		super(pos);
	}
	
	public void tick() {
		float speed = 400;
		
		if(Keyboard.keys[KeyEvent.VK_A]) {
			pos.x -= speed * Game.deltaTime;
		}
		
		if(Keyboard.keys[KeyEvent.VK_D]) {
			pos.x += speed * Game.deltaTime;
		}
		
		yVel += G * Game.deltaTime;
		pos.y += yVel * Game.deltaTime;
	}
}
