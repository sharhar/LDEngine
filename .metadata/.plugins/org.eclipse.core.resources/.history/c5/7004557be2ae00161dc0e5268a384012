package game;

import java.awt.Graphics;

import engine.utils.math.Vector2f;

public class GameController {
	
	public static void init() {
		Universe.bodies.add(new Body(new Vector2f(150, 150), new Vector2f(10, 0), 10, 10));
		Universe.bodies.add(new Body(new Vector2f(400, 300), new Vector2f(0, -10), 10, 1));
		Universe.bodies.add(new Body(new Vector2f(300, 400), new Vector2f(5, 5), 10, 1000));
	}
	
	public static void render() {
		Universe.tick(Game.deltaTime * 10);
		Universe.render();
	}
	
	public static void postRender(Graphics g) {
		
	}
}
