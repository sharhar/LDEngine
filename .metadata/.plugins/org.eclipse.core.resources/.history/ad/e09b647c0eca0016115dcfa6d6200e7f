package game.entities;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.image.BufferedImage;

import engine.rendering.Texture;
import engine.rendering.shapes.QuadAA;
import engine.utils.math.Vector2f;
import game.Game;

public class Player extends QuadAA{
	
	public static Texture tex;
	
	static {
		BufferedImage img = new BufferedImage(16, 16, BufferedImage.TYPE_INT_ARGB);
		Graphics g = img.getGraphics();
		g.setColor(new Color(0.1f, 0.35f, 0.9f));
		g.fillRect(0, 0, Game.WIDTH, Game.HEIGHT);
		g.dispose();
	}

	public Player(Vector2f pos, Vector2f size, Texture texture) {
		super(pos, size, texture);
	}
	
}
